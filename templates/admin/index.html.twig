{% extends 'admin/layout.html.twig' %}

{% block title %}Admin
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<section id="admin">

                    <h1 class="title-page-account">
                        {{ 'header.my_account'|trans }}
                    </h1>

					<ul class="nav nav-tabs" id="account-tab" role="tablist">
						<li class="nav-item">
							<a class="nav-link {% if (tab is defined and (tab == 'home' or tab == false)) or tab is not defined %}active{% endif %}" id="home-tab" data-toggle="tab" href="#content-home" name="content-home" role="tab">
								<i class="fas fa-home"></i>
								{{ 'nav.dashboard'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if tab is defined and tab == 'tasks' %}active{% endif %}" id="tasks-tab" data-toggle="tab" href="#content-tasks" name="content-tasks" role="tab">
								<i class="fas fa-tasks"></i>
								{{ 'nav.tasks'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if tab is defined and tab == 'work' %}active{% endif %}" id="work-tab" data-toggle="tab" href="#content-work" name="content-work" role="tab">
								<i class="far fa-list-alt"></i>
								{{ 'nav.work'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if tab is defined and tab == 'skill' %}active{% endif %}" id="skill-tab" data-toggle="tab" href="#content-skill" name="content-skill" role="tab">
								<i class="fas fa-list"></i>
								{{ 'nav.skills'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if tab is defined and tab == 'training' %}active{% endif %}" id="training-tab" data-toggle="tab" href="#content-training" name="content-training" role="tab">
								<i class="fas fa-graduation-cap"></i>
								{{ 'nav.training'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if tab is defined and tab == 'user' %}active{% endif %}" id="user-tab" data-toggle="tab" href="#content-user" name="content-user" role="tab">
								<i class="fas fa-users"></i>
								{{ 'nav.users'|trans }}
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if tab is defined and tab == 'personal_informations' %}active{% endif %}" id="personal_informations-tab" data-toggle="tab" href="#content-personal_informations" name="content-personal_informations" role="tab">
								<i class="fas fa-building"></i>
								{{ 'nav.personal_informations'|trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if tab is defined and tab == 'change_password' %}active{% endif %}" id="change_password-tab" data-toggle="tab" href="#content-change_password" name="content-change_password" role="tab">
								<i class="fas fa-key"></i>
								{{ 'nav.change_password'|trans }}</a>
						</li>
					</ul>

					<div class="tab-content" id="account-tab-content">
						<div class="tab-pane fade {% if (tab is defined and (tab == 'home' or tab == false)) or tab is not defined %}show active{% endif %}" id="content-home" role="tabpanel">
							{% include 'admin/home.html.twig' %}
						</div>
						<div class="tab-pane fade {% if tab is defined and tab == 'tasks' %}show active{% endif %}" id="content-tasks" role="tabpanel">
							{% include 'admin/tasks.html.twig' %}
						</div>
						<div class="tab-pane fade {% if tab is defined and tab == 'work' %}show active{% endif %}" id="content-work" role="tabpanel">
							{% include 'admin/work.html.twig' %}
						</div>
						<div class="tab-pane fade {% if tab is defined and tab == 'skill' %}show active{% endif %}" id="content-skill" role="tabpanel">
							{% include 'admin/skills.html.twig' %}
						</div>
						<div class="tab-pane fade {% if tab is defined and tab == 'training' %}show active{% endif %}" id="content-training" role="tabpanel">
							{% include 'admin/training.html.twig' %}
						</div>
						<div class="tab-pane fade {% if tab is defined and tab == 'user' %}show active{% endif %}" id="content-user" role="tabpanel">
							{% include 'admin/users.html.twig' %}
						</div>
						<div class="tab-pane fade {% if tab is defined and tab == 'personal_informations' %}show active{% endif %}" id="content-personal_informations" role="tabpanel">
							{% include 'admin/personal_informations.html.twig' %}
						</div>
						<div class="tab-pane fade {% if tab is defined and tab == 'change_password' %}show active{% endif %}" id="content-change_password" role="tabpanel">
							{% include 'admin/change_password.html.twig' %}
						</div>
					</div>
				</section>
			</div>
		</div>
	</div>

	{% include 'admin/elements/modal.html.twig' %}
{% endblock %}


{% block javascripts %}
	{{ encore_entry_script_tags('main') }}
	{{ encore_entry_script_tags('admin') }}
	{{ encore_entry_script_tags('common') }}
	{{ encore_entry_script_tags('map') }}
{% endblock %}
