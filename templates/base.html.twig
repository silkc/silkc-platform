<!DOCTYPE html>
<html lang="en">
	<head>
        <meta charset="UTF-8">
        <title>Silkc -
            {% block title %}Welcome!
            {% endblock %}
        </title>
        {#{{ encore_entry_link_tags('flag_icon_css_master') }}#}
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap" rel="stylesheet">
        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('build/images/favicon.png') }}"/>
        {% block stylesheets %}{% endblock %}
        {{ include('trads.html.twig') }}

        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-FMSN7LX1ER"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-FMSN7LX1ER');
        </script>
    </head>

    <body  lang="{{ app.request.locale|split('_')[0] }}" data-token="{{ app is defined and app is not empty and attribute(app, 'user') is defined and app.user is not empty and attribute(app.user, 'apiToken') is defined and app.user.apiToken is not empty ? app.user.apiToken : false }}" class="{% block body_class %}{% endblock %}"> 
        
        {% block carousel %}{% endblock %}
        {% block header %}{% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}{% endblock %}
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDER4cAfda1DD7Xuxa9JrpM7jlUP2sQyWc&libraries=places"></script>
        {% block javascripts %}
        <script type="text/javascript">
            // Si l'utilisateur est sur un navigateur Firefox, et qu'il n'a pas déjà été prévenu, on lui propose de choisir un autre navigateur
            if (navigator.userAgent.toLowerCase().indexOf('firefox') != -1){
                if (document.cookie.indexOf('firefox_alert=true') == -1) {
                    alert("{{ 'firefox_alert'|trans }}")

                    document.cookie = 'firefox_alert=true';
                }
            }
        </script>
        {% endblock %}

        <!-- Modal map -->
        <div class="modal fade" id="modal-address" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">{{ 'address_suggestion'|trans }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                </div>
                </div>
            </div>
        </div>
    </body>
</html>
