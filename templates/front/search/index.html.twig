{% extends 'front/layout.html.twig' %}

{% block title %}
	{{ 'title_page.results'|trans }}
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	{{ encore_entry_link_tags('search_results') }}
{% endblock %}

{% block body %}
	<div id="search-results" class="mb-4">
		<div class="container">
			<form class="form-inline form-search form-results" method="POST" action="{{ path('app_search_results') }}">
				{% include 'front/search/results.html.twig' %}
			</form>
		</div>
	</div>
{% endblock %}


{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('main') }}
	{{ encore_entry_script_tags('search_results') }}
{% endblock %}
