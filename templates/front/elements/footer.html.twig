<footer id="footer">
	<div>
		<div class="container">
			<div>
				{% set currentPath = path(app.request.attributes.get('_route'),
                       app.request.attributes.get('_route_params')) %}
				{% if currentPath != '/' %}
					<ul class="text-right">
						<li><a class="scrolltop" href="#page"><span class="fa fa-angle-up"></span>{{ 'top'|trans }}</a></li>
						<li><a title="Home" href="{{ path('app_home_root') }}">{{ 'nav.home'|trans }}</a></li>
					</ul>
				{% endif %}
			</div>

			<div class="content-footer">
				<div>
					<img src="{{asset('build/images/logo-erasmus-footer.png')}}" width="210">
				</div>
				<p>{{ 'disclaimer'|trans|raw }}</p>
			</div>
		</div>
	</div>
</footer>
