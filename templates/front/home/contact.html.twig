{% extends 'front/layout.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block content %}
    <div class="container mt-4 mb-4">
        <h1 class="title-page-account">{{ 'contact_page_title'|trans }}</h1>

        <form method="POST" action="{{ path('app_contact') }}">
            <div class="mb-3">
                <label for="name" class="form-label">{{ 'contact_name_label'|trans }}</label>
                <input type="text" value="{{ (name is defined and name is not empty) ? name }}" name="name" class="form-control" id="name">
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">{{ 'contact_email_label'|trans }}</label>
                <input type="email" value="{{ (email is defined and email is not empty) ? email }}" name="email" class="form-control" id="email">
            </div>

            <div class="mb-3">
                <label for="message" class="form-label">{{ 'contact_message_label'|trans }}</label>
                <textarea rows="4" name="message" class="form-control" id="message">{{ (message is defined and message is not empty) ? message }}</textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">{{ 'contact_send_button'|trans }}</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
	{{ encore_entry_script_tags('main') }}
{% endblock %}
